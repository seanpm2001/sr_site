<!DOCTYPE html>
<html class="no-js">
<head>
	<title>Smith &amp; Robot</title>

	<%- @getBlock('meta').toHTML(); %>
	<%- @getBlock('styles').toHTML(); %>
</head>	

<body>

	<header role="banner">
		<nav class="navbar"><div class="pageContainer toggle-container">
			<ul class="menu menu--horizontal menuSkin--main menuSkin--toggle">
				<% for page in @getCollection('pages').toJSON(): %>
					<li class="menu-item" data-target="<%= page.id %>">
						<div><%= page.title %></div>

						<div class="toggled" data-target="<%= page.id %>">
							<%- page.contentRendered %>
						</div>
					</li>
				<% end %>
			</ul>
		</div></nav>
	</header>
	
	<%- @content %>

	<footer role="contentinfo">
		<p class="text-center">Copyright 2013 Smith &amp; Robot</p>
	</footer>

	<%- @getBlock('scripts').toHTML(); %>
</body>
</html>